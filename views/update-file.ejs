  .con{
     background-color: rgb(12, 225, 225);
     padding: 1.7rem 6rem;
     margin-top: 2rem;
     width: 70% !important;
     border-radius: 20px;
   }
   .con form input,
   .con form select{
    margin: auto;
     width: 90%;
     border-radius: 17px;
     color: rgb(58, 58, 58);
  }
  .con form input::placeholder{
     color: rgb(58, 58, 58);
  }
  .btn{
     border-radius: 17px;
     width: 90% !important;
     margin: auto;
     background: rgb(8, 8, 95)!important;
  }
  h2{
   margin-left: 3rem;
  }
</style>

